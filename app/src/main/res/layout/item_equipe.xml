<!-- item_equipe.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nome_equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da Equipe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:contentDescription="Nome da equipe" />  <!-- Adicionando descrição para acessibilidade -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilotos: "
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_piloto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piloto 1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:contentDescription="Nome do primeiro piloto" />  <!-- Descrição para acessibilidade -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" e "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_piloto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piloto 2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:contentDescription="Nome do segundo piloto" />  <!-- Descrição para acessibilidade -->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
